            v = v.replace(/^(\d{2})\.(\d{3})(\d)/, "$1.$2.$3");
            v = v.replace(/\.(\d{3})(\d)/, ".$1/$2");
            v = v.replace(/(\d{4})(\d)/, "$1-$2");

            $$('label[for="<?php echo $_code ?>_social_security_number"]').first().update('<em>*</em>CNPJ');
